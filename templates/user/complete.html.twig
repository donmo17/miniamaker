{% extends 'base.html.twig' %}

{% block title %}Complétez votre profil{% endblock %}

{% block body %}
<div class="center">
    <form action={{ path('app_complete') }} method="post" class="container-xs shadow bg-white p-3">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div class="form-group mb-3">
            <label for="username" class="form-label">Nom d'utilisateur</label>
            <input type="text" class="form-control" id="username" name="username" value="{{ app.user.username ?? '' }}" {{ app.user.username ? 'readonly' : '' }} required minlength="2" maxlength="80">
            <p class="help fst-italic">
                2 caractères minimum, uniquement des lettres, des chiffres et des tirets.
            </p>
        </div>
        <div class="form-group mb-3">
            <label for="fullname" class="form-label">Nom complet</label>
            <input type="text" class="form-control" id="fullname" name="fullname" value="{{ app.user.fullname ?? '' }}" {{ app.user.fullname ? 'readonly' : '' }} required minlength="2" maxlength="80">
        </div>
        <button type="submit" class="btn btn-success">Enregistrer</button>
    </form>
</div>

{% endblock %}